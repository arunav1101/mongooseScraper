<div class="container">
  <ul class="collection">
    {{#if news}}
    {{#each news}}
    <!-- Modal Trigger -->
    <li class="collection-item avatar">
      <img src="{{img}}" alt="" class="circle">
      <a class="btn-flat modal-trigger blue-text" href="#modal{{id}}">{{title}}</a>

      <!-- Modal Structure -->
      <div id="modal{{id}}" class="modal">
        <div class="modal-content">
          <h5>Read More: <a href="{{link}}" target="_blank">{{title}}</a></h5>
          <br>
          <hr>
          <form action="/api/comment?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="row">
              <div class="col s3">
                <input type="text" placeholder="Name" name="commentUser">
              </div>
              <div class="col s5">
                <input type="hidden" value="{{id}}" name="articleId">
                <input type="text" placeholder="Comments" name="commentBody">
              </div>
              <div class="col s3">
                <button class="btn">Comment</button>
              </div>
            </div>
          </form>
          <br>
          <hr>
          <ul class="collection">
            {{#each comments}}
            <li class="collection-item avatar">
              <i class="material-icons circle green">comment</i>
              <span class="title">{{commentUser}}</span>
              <p>{{commentBody}}</p>
              <div class="secondary-content">
                <a href="#!" class=""><i class="material-icons green-text">mood</i></a>
                <a href="#!" class=""><i class="material-icons orange-text">mood_bad</i></a>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        <div class="modal-footer">
          <a href="#!" class="modal-close waves-effect red waves-red btn">Close News Article</a>
        </div>
      </div>
    </li>
    {{/each}}
    {{else}}
    <body onload="M.toast({html: 'Scrap the latest news from Scrap News button',classes: 'rounded' ,displayLength:'10000'})"></body>
    {{/if}}
  </ul>
</div>